{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["ES2021", "DOM"],
    "types": ["node", "jest"]
  },
  "include": ["src", "scripts", "types"],
  "exclude": ["node_modules"]
}
